<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
        xmlns:l="sap.ui.table"
        xmlns:x="sap.ui.layout"
        xmlns:w="sap.ui.webc.main"
        id="ItemsFragment">
    <Dialog contentWidth="1200px"
            id="wharehouse"
            title="{= 'DocEntry: ' + ${itemsModelSQL>/DocEntry} + ' ' + 'DocNum: ' + ${selectedRowModelSQL>/CardName}}"
    >
        <content>
            <l:Table
                    rows="{path:'itemsModelSQL>/DocumentLines', parameters: {arrayNames:['DocumentLines']}}"
            >
                <l:columns>

                    <l:Column width="100px">
                        <Label text="code"/>
                        <l:template>
                            <Text text="{itemsModelSQL>WhsCode}"
                                  wrapping="false"/>
                        </l:template>
                    </l:Column>

                    <l:Column width="500px">
                        <Label text="Name"/>
                        <l:template>
                            <Text text="{itemsModelSQL>WhsName}"
                                  wrapping="false"/>
                        </l:template>
                    </l:Column>

                    <l:Column width="50px">
                        <Label text="Qty"/>
                        <l:template>
                            <Text text="{itemsModelSQL>Quantity}" wrapping="false"/>
                        </l:template>
                    </l:Column>

                    <l:Column width="100px">
                        <Label text="Qty InStock"/>
                        <l:template>
                            <Text text="{itemsModelSQL>TotalStock}" wrapping="false"/>
                        </l:template>
                    </l:Column>

                </l:columns>
            </l:Table>
        </content>
        <buttons class="sapUiResponsiveMargin">
            <Button text="Fermer" press="onCloseWhareHouseOfItem"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>