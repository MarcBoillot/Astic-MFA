<mvc:View controllerName="wwl.controller.Dialog"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:f="sap.f"
          xmlns="sap.m"
          xmlns:l="sap.ui.table"
         >
    <f:DynamicPage id="item" title="{ordersModel>/}" >
        <f:header>
            <f:DynamicPageHeader pinnable="false">
                <FlexBox alignItems="Center" justifyContent="SpaceBetween">
                    <Title text="Template de base" titleStyle="H2" class="sapUiSmallMarginBegin"/>
                    <Image src="./img/seidor-logo1.png" height="42px"/>
                </FlexBox>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <l:Table
                    id="table"
                    rows="{path:'ordersModel>/', parameters: {arrayNames:['DocumentLines']}}"
                    selectionMode="MultiToggle"
                    enableSelectAll="false"
                    ariaLabelledBy="title">
                <l:extension>
                    <OverflowToolbar style="Clear">
                        <Button text="Master" press="onMasterView"/>
                        <Button text="See details of selection" />
                        <ToolbarSpacer/>
                        <Button text="create" press="onOpenDialogAddOrder"/>
                    </OverflowToolbar>
                </l:extension>
                <l:columns>
                    <l:Column width="100px">
                        <HBox>
                            <ToggleButton text="Details"
                                          enabled="true"
                                          pressed="true"
                                          ariaDescribedBy="acceptButtonDescription genericButtonDescription"
                                          press="onExpandSelection">
                                <layoutData>
                                    <FlexItemData growFactor="1"/>
                                </layoutData>
                            </ToggleButton>
                        </HBox>
                        <Label text="DocEntry"/>
                        <l:template>
                            <Text text="{ordersModel>DocEntry}" wrapping="false" />
                        </l:template>
                    </l:Column>
                    <l:Column width="250px">
                        <Label text="Orders"/>
                        <l:template>
                            <Text text="{ordersModel>CardName} ({ordersModel>CardCode})" wrapping="false" />
                        </l:template>
                    </l:Column>
                    <l:Column width="100px">
                        <Label text="Date"/>
                        <l:template>
                            <Text text="{path : 'ordersModel>DocDate', formatter : '.Formatter.formatDate'}" wrapping="false" />
                        </l:template>
                    </l:Column>
                    <l:Column>
                        <Label text="TotalPrice "/>
                        <l:template>
                            <Text text="{ordersModel>TotalPrice}" wrapping="false"/>

                        </l:template>
                    </l:Column>
                    <l:Column>
                        <Label text="Qty "/>
                        <l:template>
                            <Text text="{ordersModel>Quantity}" wrapping="false"/>
                        </l:template>
                    </l:Column>
                    <l:Column width="100px">
                        <Label text="Button"/>
                        <l:template>
                            <Button  text="itemsView" press="onShowItemsInOrder"/>
                        </l:template>
                    </l:Column>
                </l:columns>
            </l:Table>


        </f:content>

    </f:DynamicPage>


</mvc:View>