<mvc:View controllerName="wwl.controller.Dialog"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:f="sap.f"
          xmlns="sap.m"
          xmlns:l="sap.ui.table"
>
    <f:DynamicPage>
        <f:header>
            <f:DynamicPageHeader pinnable="false">
                <FlexBox alignItems="Center" justifyContent="SpaceBetween">
                    <Title text="Marc Template" titleStyle="H2" class="sapUiSmallMarginBegin"/>
                    <Image src="./img/seidor-logo1.png" height="42px"/>
                </FlexBox>
            </f:DynamicPageHeader>
        </f:header>

        <f:content>

            <VBox>

            <IconTabBar>
                <items>

                    <IconTabFilter text="Commandes en cours">
                    <l:Table
                            id="table"
                            rows="{path:'ordersModelSQL>/'}"
                            selectionMode="MultiToggle"
                            enableSelectAll="false"
                            ariaLabelledBy="title">
                        <l:extension>
                            <OverflowToolbar style="Clear">
                                <Button text="Create an order" press="onOpenDialogAddOrder"/>
                            </OverflowToolbar>
                        </l:extension>

                        <l:columns>

                            <l:Column width="100px">
                                <Label text="DocEntry"/>
                                <l:template>
                                    <Text text="{ordersModelSQL>DocEntry}" wrapping="false"/>
                                </l:template>
                            </l:Column>

                            <l:Column width="250px">
                                <Label text="Clients"/>
                                <l:template>
                                    <Text text="{ordersModelSQL>CardName} ({ordersModel>CardCode})"
                                          wrapping="false"/>
                                </l:template>
                            </l:Column>

                            <l:Column width="100px">
                                <Label text="Date"/>
                                <l:template>
                                    <Text text="{ordersModelSQL>DocDueDate_formatted}"
                                          wrapping="false"/>
                                </l:template>
                            </l:Column>

                            <l:Column width="100px">
                                <Label text="TotalPrice "/>
                                <l:template>
                                    <Text text="{ordersModelSQL>totalPriceInOrder} €" wrapping="false"/>
                                </l:template>
                            </l:Column>

                            <l:Column>
                                <Label text="Address "/>
                                <l:template>
                                    <Text text="{ordersModelSQL>Address}" wrapping="false"/>
                                </l:template>
                            </l:Column>

                            <l:Column width="100px">
                                <Label text="Button"/>
                                <l:template>
                                    <Button text="itemsView" press="onShowItemsInOrder"/>
                                </l:template>
                            </l:Column>

                        </l:columns>
                    </l:Table>
                    </IconTabFilter>

                    <IconTabFilter text="Voir les OF en cours">
                        <l:Table
                                id="table2"
                                rows="{ordersModelSQL>/}"
                                selectionMode="MultiToggle"
                                enableSelectAll="false"
                                ariaLabelledBy="title">
                            <l:extension>
                                <OverflowToolbar style="Clear">
                                    <Button text="Create an order" press="onOpenDialogAddOrder"/>
                                </OverflowToolbar>
                            </l:extension>
                            <l:columns>
                                <l:Column width="100px">
                                    <Label text="DocNum"/>
                                    <l:template>
                                        <Text text="{ordersModelSQL>DocNum}" wrapping="false"/>
                                    </l:template>
                                </l:Column>
                                <l:Column width="100px">
                                    <Label text="DocEntry"/>
                                    <l:template>
                                        <Text text="{ordersModelSQL>DocEntry}" wrapping="false"/>
                                    </l:template>
                                </l:Column>

                                <l:Column width="250px">
                                    <Label text="Orders"/>
                                    <l:template>
                                        <Text text="{ordersModelSQL>CardName} ({ordersModelSQL>CardCode})"
                                              wrapping="false"/>
                                    </l:template>
                                </l:Column>

                                <l:Column width="100px">
                                    <Label text="Date"/>
                                    <l:template>
                                        <Text text="{ordersModelSQL>DocDueDate_formatted}"
                                              wrapping="false"/>
                                    </l:template>
                                </l:Column>

                                <l:Column width="100px">
                                    <Label text="TotalPrice "/>
                                    <l:template>
                                        <Text text="{ordersModelSQL>totalPriceInOrder} €" wrapping="false"/>
                                    </l:template>
                                </l:Column>

                                <l:Column>
                                    <Label text="Address "/>
                                    <l:template>
                                        <Text text="{ordersModelSQL>Address}" wrapping="false"/>
                                    </l:template>
                                </l:Column>

                                <l:Column width="150px">
                                    <Label text="Button"/>
                                    <l:template>
                                        <Button text="Voir Produits" press="onShowItemsInOfSQL"/>
                                    </l:template>
                                </l:Column>

                            </l:columns>
                        </l:Table>
                    </IconTabFilter>
                </items>
            </IconTabBar>
            </VBox>
        </f:content>
    </f:DynamicPage>
</mvc:View>