<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
        xmlns:l="sap.ui.table"
        xmlns:x="sap.ui.layout"
        xmlns:w="sap.ui.webc.main"
        id="ItemsFragment">
    <Dialog contentWidth="1200px"
            id="itemsDialog"
            title="{= 'DocEntry: ' + ${selectedRowModel>/DocEntry} + ' ' + 'DocNum: ' + ${selectedRowModel>/DocNum}}"
    >
        <content>
            <OverflowToolbar style="Clear">
                <Button text="Add Item" press="onOpenDialogAddItem"/>
                <ToolbarSpacer/>
                <Button text="Close this order" press="onClosingOrder"/>
            </OverflowToolbar>
            <l:Table
                    rows="{path:'selectedRowModel>/DocumentLines', parameters: {arrayNames:['DocumentLines']}}"
            >
                <l:columns>

                    <l:Column width="100px">
                        <Label text="Code Bar"/>
                        <l:template>
                            <Text text="{selectedRowModel>BarCode}"
                                  wrapping="false"/>
                        </l:template>
                    </l:Column>

                    <l:Column width="500px">
                        <Label text="Name"/>
                        <l:template>
                            <Text text="{selectedRowModel>ItemDescription}"
                                  wrapping="false"/>
                        </l:template>
                    </l:Column>

                    <l:Column width="50px">
                        <Label text="Qty"/>
                        <l:template>
                            <Text text="{selectedRowModel>Quantity}" wrapping="false"/>
                        </l:template>
                    </l:Column>

                    <l:Column width="100px">
                        <Label text="Qty InStock"/>
                        <l:template>
                            <Text text="{selectedRowModel>totalStock}" wrapping="false"/>
                        </l:template>
                    </l:Column>

                    <l:Column width="100px">
                        <Label text="Modify"/>
                        <l:template>
                            <Button text="modify" press="onPatchOrder"/>
                        </l:template>
                    </l:Column>

                    <l:Column class="sapUiSmallMargin" width="100px">
                        <Label text="Delete"/>
                        <l:template>
                            <Button text="Supprimer" press="onOpenDialogDelete"/>
                        </l:template>
                    </l:Column>

                </l:columns>
            </l:Table>
        </content>
        <buttons class="sapUiResponsiveMargin">
            <Button text="Valider l'OF en cours" press="onValidationOF"/>
            <Button text="Scaner" press="onScan"/>
            <Button text="Fermer" press="onCloseItemsDialog"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>