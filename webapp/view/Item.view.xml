<mvc:View controllerName="wwl.controller.Master"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:f="sap.f"
          xmlns="sap.m"
          xmlns="sap.ui.table">
    <page>
        <content>
            <TreeTable
                    id="TreeTableBasic"
                    rows="{path:'Item', parameters: {arrayNames:['Items']}}"
                    selectionMode="MultiToggle"
                    enableSelectAll="false"
                    ariaLabelledBy="title">
                <extension>
                    <OverflowToolbar style="Clear">
                        <Title id="title" text="Clothing"/>
                        <ToolbarSpacer/>
                        <Button text="Collapse all" press="onCollapseAll"/>
                        <Button text="Collapse selection" press="onCollapseSelection"/>
                        <Button text="Expand first level" press="onExpandFirstLevel"/>
                        <Button text="Expand selection" press="onExpandSelection"/>
                    </OverflowToolbar>
                </extension>
                <columns>
                    <Column width="13rem">
                        <Label text="Items"/>
                        <template>
                            <Text text="{name}" wrapping="false" />
                        </template>
                    </Column>
                    <Column width="9rem">
                        <Label text="Price"/>
                        <template>
                            <Currency value="{amount}" currency="{currency}"/>
                        </template>
                    </Column>
                    <Column width="11rem">
                        <Label text="Size"/>
                        <template>
                            <Select
                                    items="{path: '/sizes', templateShareable: true}"
                                    selectedKey="{size}"
                                    visible="{= !!${size}}"
                                    forceSelection="false">
                                <core:Item key="{key}" text="{value}"/>
                            </Select>
                        </template>
                    </Column>
                </columns>
            </TreeTable>
        </content>


    </page>







</mvc:View>