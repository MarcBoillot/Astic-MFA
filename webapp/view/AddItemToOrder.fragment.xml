<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:f="sap.f"
        xmlns:core="sap.ui.core"
        xmlns:l="sap.ui.table"
        id="UpdateItemsFragment">
    <Dialog id="AddItemToOrder"
            contentWidth="1000px"
            title="ADD A ITEM">
        <HBox alignItems="Center" class="sapUiSmallMargin">
            <Label text="Product" labelFor="productInput" class="sapUiSmallMarginEnd" />
            <Input
                    id="productInput"
                    placeholder="Enter product"
                    showSuggestion="true"
                    suggest=".onSuggest"
                    suggestionItems="{itemsListModel>/}" >
                <suggestionItems>
                    <core:Item text="{itemsListModel>ItemName}" />
                </suggestionItems>
            </Input>
        </HBox>
        <HBox alignItems="Center" class="sapUiSmallMargin">
        <Label text="Entrer une QuantitÃ©" class="sapUiSmallMarginEnd"/>
        <Input required="true" value="{newItemModel>/Quantity}" placeholder="Exemple : 45 "/>
        </HBox>
        <buttons>
            <Button text="CANCEL" press="onCancelAddItem"/>
            <Button text="PATCH_ORDER" press="onAddItemInOrderSQL"/>
        </buttons>

    </Dialog>
</core:FragmentDefinition>