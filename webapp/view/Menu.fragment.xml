<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
        xmlns:l="sap.ui.table"
        id="MenuFragment">
    <Dialog contentWidth="500px"
            id="helloDialog"
            title="hello">
        <content>
            <Label text="ItemsCustomer"/>
            <l:Table
                     rows="{path:'itemsModel>/', parameters: {arrayNames:['ItemCode']}}"
                     visibleRowCount="{itemsModel}.length">
                <l:columns>
                    <l:Column>
                        <Label text="ItemName"/>
                        <l:template>
                            <Text text="{itemsModel>ItemName}" wrapping="false"/>
                        </l:template>
                    </l:Column>
                    <l:Column>
                        <Label text="ItemGroupCode"/>
                        <l:template>
                            <Text text="{itemsModel>ItemsGroupCode}" wrapping="false"/>
                        </l:template>
                    </l:Column>
                </l:columns>
            </l:Table>
        </content>
    </Dialog>
