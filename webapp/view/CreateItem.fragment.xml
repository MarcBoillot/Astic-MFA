<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:f="sap.f"
        xmlns:core="sap.ui.core"
        xmlns:l="sap.ui.table"
        id="UpdateItemsFragment">
    <Dialog contentWidth="1000px"
            id="AdditemToOrder"
            title="ADD A ITEM">
        <HBox>
            <Label  text="Select an ItemName"/>
            <Select
                    id="selectedItem"
                    width="500px"
                    forceSelection="true"
                    selectedKey="{itemsModel>/ItemName}"
                    items="{
						path: 'itemsModel>/',
						sorter: { path: 'ItemName' }
					}"
            >
                <core:Item key="{itemsModel>ItemName}" text="{itemsModel>ItemName}" />
            </Select>
        </HBox>

        <Label text="Entrer une QuantitÃ©"/>
        <Input value="{itemsModel>Quantity}" placeholder="Exemple : 45 "/>

        <endButton>
            <Button text="PATCH_ORDER" press="onPostItem"/>
        </endButton>

    </Dialog>
</core:FragmentDefinition>