<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
        xmlns:l="sap.ui.table"
        xmlns:x="sap.ui.layout"
        xmlns:w="sap.ui.webc.main"
        id="ItemsFragment">
    <Dialog contentWidth="1200px"
            id="itemsDialog"
            title="{= 'DocEntry: ' + ${selectedRowModel>/DocEntry} + ' ' + 'DocNum: ' + ${selectedRowModel>/DocNum}}"
    >
        <content>
            <OverflowToolbar style="Clear">
                <Button text="Add Item" press="onOpenDialogAddItem"/>
            </OverflowToolbar>
            <l:Table
                    rows="{path:'selectedRowModel>/DocumentLines', parameters: {arrayNames:['DocumentLines']}}"
                    >
                <l:columns>
                    <l:Column>
                        <Label text="Name"/>
                        <l:template>
                            <Text text="{selectedRowModel>ItemDescription}  ({selectedRowModel>BarCode})" wrapping="false" />
                        </l:template>
                    </l:Column>
                    <l:Column width="100px">
                        <Label text="Price/u"/>
                        <l:template>
                            <Text text="{selectedRowModel>PriceAfterVAT} {selectedRowModel>Currency}" wrapping="false"/>
                        </l:template>
                    </l:Column>
                    <l:Column width="50px">
                        <Label text="Qty"/>
                        <l:template>
                            <Text text="{selectedRowModel>Quantity}" wrapping="false"/>
                        </l:template>
                    </l:Column>
                    <l:Column width="100px">
                        <Label text="Total Price"/>
                        <l:template>
                            <Text text="{selectedRowModel>totalPriceForItem} {selectedRowModel>Currency}" wrapping="false"/>
                        </l:template>
                    </l:Column>
                    <l:Column width="100px">
                        <Label text="Modify"/>
                        <l:template>
                            <Button text="modify" press="onPatchOrder"/>
                        </l:template>
                    </l:Column>
                    <l:Column width="100px">
                        <Label text="Delete"/>
                        <l:template>
                            <Button text="-" press="onOpenDialogDelete"/>
                        </l:template>
                    </l:Column>
                </l:columns>
            </l:Table>
        </content>
        <endButton>
            <Button text="Close"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>