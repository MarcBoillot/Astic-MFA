<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
        xmlns:l="sap.ui.table"
        id="ItemsFragment">
    <Dialog contentWidth="500px"
            id="itemsDialog"
            title="ITEMS">
        <content>
            <Label text="ItemsCustomer"/>
            <l:Table
                    rows="{path:'itemsModel>/', parameters: {arrayNames:['ItemCode']}}"
                    visibleRowCount="{itemsModel}.length">
                <l:columns>
                    <l:Column>
                        <Label text="Name"/>
                        <l:template>
                            <Text text="{ordersModel>ItemDescription}  {ordersModel>BarCode}" wrapping="false" />
                        </l:template>
                    </l:Column>
                    <l:Column>
                        <Label text="Price"/>
                        <l:template>
                            <Text text="{ordersModel>PriceAfterVAT} {ordersModel>Currency}" wrapping="false"/>
                        </l:template>
                    </l:Column>
                    <l:Column>
                        <Label text="Qty"/>
                        <l:template>
                            <Text text="{ordersModel>Quantity}" wrapping="false"/>
                        </l:template>
                    </l:Column>
                </l:columns>
            </l:Table>
        </content>
        <endButton>
            <Button text="Close" press="onClose"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>